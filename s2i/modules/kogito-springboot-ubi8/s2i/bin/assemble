#!/bin/bash -e
# this script is used by OpenShift with chained builds
# to transfer data from builder image into the runtime image

cp -R /tmp/src/bin/ $KOGITO_HOME

if [ -d "$KOGITO_HOME/bin" ]; then
  echo "---> Application binaries found and ready to use"
  
  echo "---> Adding custom labels..."
  if [ -e "${KOGITO_HOME}/bin/image_metadata.json" ]; then
    mkdir /tmp/.s2i
    mv -v $KOGITO_HOME/bin/image_metadata.json /tmp/.s2i/image_metadata.json
  else
    echo "-----> Failed to copy metadata file, $KOGITO_HOME/bin/image_metadata.json does not exist"
  fi
else
  echo "---> Application binaries NOT found, failing build..."
  exit 1
fi

